@model IEnumerable<InvoiceApp.Models.TrInvoice>

<h2>TrInvoice List</h2>
<table class="table">
    <thead>
        <tr>
            <th>InvoiceNo</th>
            <th>InvoiceDate</th>
            <th>InvoiceTo</th>
            <th>ShipTo</th>
            <th>SalesID</th>
            <th>CourierID</th>
            <th>PaymentType</th>
            <th>CourierFee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InvoiceNo</td>
                <td>@item.InvoiceDate</td>
                <td>@item.InvoiceTo</td>
                <td>@item.ShipTo</td>
                <td>@item.SalesID</td>
                <td>@item.CourierID</td>
                <td>@item.PaymentType</td>
                <td>@item.CourierFee</td>
                <td>
                    <a href="@Url.Action("Delete", "TrInvoice", new { id = item.InvoiceNo })" onclick="return confirm('Are you sure you want to delete this invoice?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
